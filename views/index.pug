extends layouts/main_layout.pug
block content-carousel
    section.container-fluid.p-0.m-0.mt-2
    #carouselExampleControls.carousel.slide(data-bs-ride='carousel')
        .carousel-inner
          .carousel-item.active
            img.d-block.w-100.height-1(src='/img/banner-3.jpg' alt='...')
          .carousel-item
            img.d-block.w-100.height-1(src='/img/banner-2.jpg' alt='...')
          .carousel-item
            img.d-block.w-100.height-1(src='/img/banner-1.jpg' alt='...')
        button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev')
          span.carousel-control-prev-icon(aria-hidden='true')
          span.visually-hidden Previous
        button.carousel-control-next(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next')
          span.carousel-control-next-icon(aria-hidden='true')
          span.visually-hidden Next  
block content-product
  .set-2.d-flex.justify-content-start.flex-wrap(style=' flex:85%')
    each product in A_products.slice(14)
      .card.mb-5(style='width:240px; height: 378px;')
        .d-flex.align-items-stretch.hovereffect(style='width:231px; height: 230px;')
          img.img-responsive.mx-auto(src=`${product.image_link}` width='150px' height='180px' alt='')
        .card-body.p-2
          .card-title
              - const a=`${product.name}`.slice(0,27)
              | #{a}...
          .card-text.pb-3 #{product.price}TL
